    <variable name="CATEGORY" expression="enum(&quot;app&quot;,&quot;frontend&quot;,&quot;backend&quot;,&quot;common&quot;)" defaultValue="app" alwaysStopAt="true" />
    <variable name="MESSAGE" expression="" defaultValue="" alwaysStopAt="true" />
